package com.mockpage.schoolwebapp.parentportal.parent.controller;

import javax.validation.Valid;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.mockpage.schoolwebapp.parentportal.parent.model.Teacher;

@FeignClient("teacher-portal-client-service")
public interface TeacherPortalController {

	@GetMapping("/home/teacher")
	public String teacherForm(Model model);
		
	@PostMapping("/home/teacher/add_teacher")
	public String teacherSubmit();
	
	@GetMapping("/home/login")
	public String teacherLogin();

	@GetMapping("/home/teacher/teacher_logout")
	public String teacherLogout();
	
	@PostMapping("/home/teacher/auth_teacher")
	public String teacherLogin(Model model,
			@Valid @RequestParam String username, 
			@Valid @RequestParam String password);
	
	@GetMapping("/home/teacher/teacher_portal/{id}")
	public String teacherPortal(@PathVariable String id, Model model);
	
	@GetMapping("/home/teacher/{teacherId}/profile")
	public String teacherProfile(@PathVariable String teacherId,Model model);

	@GetMapping("/home/teacher/{teacherId}/notifications")
	public String teacherNotifications(@PathVariable String teacherId,Model model);

	@GetMapping("/home/teacher/{teacherId}/settings")
	public String teacherSettings(@PathVariable String teacherId,Model model);
	
	@GetMapping("/home/teacher/{teacherId}/edit")
	public String editteacher(@PathVariable String teacherId,
			Model model);
	
	@PostMapping("/home/teacher/update_teacher/{id}")
	public String teacherUpdate(@PathVariable String id,
			@Valid @ModelAttribute("teacher") Teacher teacher,
			BindingResult result,
			Model model);

	@GetMapping("/home/teacher/{teacherId}/remove")
	public String deleteteacher(@PathVariable String teacherId, Model model);

}
